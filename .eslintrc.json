{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "jsx-quotes": ["error", "prefer-single"],
    "space-before-function-paren": "off"
  },
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  }
}
